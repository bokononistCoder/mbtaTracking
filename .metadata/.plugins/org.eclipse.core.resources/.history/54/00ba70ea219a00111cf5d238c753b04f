import java.util.Date;


	public class trainData
	{
		private String TripNumber;
		private String PlatformName;
		private String Direction;
		private String InfomationType;
		private Date DateTime;
		private Date TimeRemaining;
		
		
		trainData()
		{
			super();
		}
		
		public void displayTrainData()
		{
			System.out.println("Trip Number: "+ TripNumber);
			System.out.println("Platform Name: "+ PlatformName);
			System.out.println("Train Direction: "+ Direction);
			System.out.println("Status: "+ InfomationType);
			System.out.println("Time: " + DateTime.toString());

//			System.out.println("Trip Number: "+ TripNumber);
		}
		
		
		public String getTripNumber() {
			return TripNumber;
		}
		public void setTripNumber(String tripNumber) {
			TripNumber = tripNumber;
		}
		public String getInfomationType() {
			return InfomationType;
		}
		public void setInfomationType(String infomationType) {
			InfomationType = infomationType;
		}
		public Date getTimeRemaining() {
			return TimeRemaining;
		}
		public void setTimeRemaining(Date timeRemaining) {
			TimeRemaining = timeRemaining;
		}
		public String getPlatformName() {
			return PlatformName;
		}
		public void setPlatformName(String platformName) {
			PlatformName = platformName;
		}
		public String getDirection() {
			return Direction;
		}
		public void setDirection(String direction) {
			Direction = direction;
		}
		public Date getDateTime() {
			return DateTime;
		}
		public void setDateTime(Date dateTime) {
			DateTime = dateTime;
		}

		
		
		
	}
